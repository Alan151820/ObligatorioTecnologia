<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTecnologia.PlansPage"
             Title="Planes">
    <VerticalStackLayout Padding="16" Spacing="12">
        <CollectionView x:Name="PlansList" SelectionMode="Single" SelectionChanged="OnSelChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" CornerRadius="12" BackgroundColor="White">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Nombre}" FontAttributes="Bold"/>
                            <Label Text="{Binding Precio, StringFormat='Precio: U$S {0:F2}'}"/>
                            <Label Text="{Binding Beneficios}" FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
