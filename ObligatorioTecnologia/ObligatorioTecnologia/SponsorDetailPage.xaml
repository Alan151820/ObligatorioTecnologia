<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="ObligatorioTecnologia.SponsorDetailPage"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Detalle Sponsor">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label x:Name="NombreLbl" FontAttributes="Bold" FontSize="20"/>
        <Label x:Name="PlanLbl" FontSize="12" TextColor="Gray"/>
        <Editor x:Name="PostEditor" Placeholder="Escribe sobre tus productos..." AutoSize="TextChanges"/>
        <Button Text="Publicar" Clicked="OnPublicar"/>

        <CollectionView x:Name="PostsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" CornerRadius="8" BackgroundColor="White" Margin="0,6">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Titulo}" FontAttributes="Bold"/>
                            <Label Text="{Binding Contenido}" FontSize="12"/>
                            <Label Text="{Binding Creado, StringFormat='{0:dd/MM HH:mm}'}" FontSize="10" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
