<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="ObligatorioTecnologia.ModalPelicula"
    Size="300,450"
>

    <Frame Padding="10" BackgroundColor="#1E1E1E" CornerRadius="20" HorizontalOptions="Center" VerticalOptions="Center">
        <ScrollView>
            <VerticalStackLayout Spacing="10">


                <Image x:Name="PosterImage" HeightRequest="160" WidthRequest="110" Aspect="AspectFill"/>

                <Label x:Name="TituloLabel" TextColor="White" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" MaxLines="2"/>

                <Label x:Name="FechaLabel" TextColor="LightGray" HorizontalOptions="Center" FontSize="14"/>

                <ScrollView HeightRequest="120">
                    <Label x:Name="DescripcionLabel" TextColor="White" FontSize="14"/>
                </ScrollView>

                <Button Text="TRAILER" Clicked="Trailer_Clicked" BackgroundColor="CadetBlue" TextColor="White"/>

            </VerticalStackLayout>
        </ScrollView>
    </Frame>

</toolkit:Popup>