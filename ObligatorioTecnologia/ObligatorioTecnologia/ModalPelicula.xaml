<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="ObligatorioTecnologia.ModalPelicula"
        CanBeDismissedByTappingOutsideOfPopup="True">


    <Grid Padding="20" BackgroundColor="Transparent">
        <Frame
    BackgroundColor="White"
    CornerRadius="12"
    WidthRequest="300"
    VerticalOptions="Center"
    HorizontalOptions="Center"
   MaximumHeightRequest="500">

            <ScrollView>

                <VerticalStackLayout Spacing="15">

                    <Image x:Name="PosterImage" HeightRequest="160" WidthRequest="110" Aspect="AspectFill"/>

                    <Label x:Name="TituloLabel" TextColor="Black" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" MaxLines="2"/>

                    <Label x:Name="FechaLabel" TextColor="Black" HorizontalOptions="Center" FontSize="14"/>

                    <Label x:Name="DescripcionLabel"
           TextColor="Black"
           FontSize="14"
           LineBreakMode="WordWrap"
           HorizontalOptions="Fill"
           VerticalOptions="Fill"
           Padding="5" />
                    <Button Text="TRAILER" Clicked="Trailer_Clicked" BackgroundColor="CadetBlue" TextColor="White"/>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</toolkit:Popup>