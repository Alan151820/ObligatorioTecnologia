<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTecnologia.SponsorsPage"
             Title="Patrocinadores">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nuevo" Clicked="OnAddClicked" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="SponsorsCollection"
                    SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10" ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding LogoPath}" WidthRequest="48" HeightRequest="48" Aspect="AspectFill"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                        <Label Text="{Binding Name}" FontAttributes="Bold"/>
                        <Label Text="{Binding Address}" FontSize="12" TextColor="Gray"/>
                    </VerticalStackLayout>
                    <Label Grid.Column="2" Text="â€º" FontSize="24" VerticalOptions="Center"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>

