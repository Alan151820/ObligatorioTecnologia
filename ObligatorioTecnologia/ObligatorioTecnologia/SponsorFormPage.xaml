<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTecnologia.SponsorFormPage"
             Title="Nuevo Patrocinador">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry x:Name="NombreEntry" Placeholder="Nombre"/>
            <Entry x:Name="DescripcionEntry" Placeholder="Descripción"/>
            <Entry x:Name="DireccionEntry" Placeholder="Dirección (calle, ciudad)"/>

            <Button Text="Guardar" Clicked="OnGuardar"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
