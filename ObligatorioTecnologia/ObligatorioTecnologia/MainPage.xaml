<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObligatorioTecnologia.MainPage">

    <ScrollView Orientation="Vertical">
        <VerticalStackLayout Padding="10" Spacing="10">

            <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="#F5F5F5">

                <!-- Título principal con sombra suave -->
                <Frame Padding="25" CornerRadius="20" HasShadow="True" BackgroundColor="#4A90E2">
                    <Label Text="Tus Noticias del Día"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalTextAlignment="Center"/>
                </Frame>

                <!-- Subtítulo con estilo más ligero -->
                <Label Text="Siempre informado con lo último de Uruguay y el mundo"
           FontSize="16"
           TextColor="#666666"
           HorizontalTextAlignment="Center"
           LineBreakMode="WordWrap"
           Margin="0,0,0,10"/>

                <!-- Línea decorativa con degradado simulado -->
                <Frame HeightRequest="7"  BackgroundColor="#FFD700" HorizontalOptions="FillAndExpand" />

            </VerticalStackLayout>

            <HorizontalStackLayout  Spacing="10" HorizontalOptions="Center">


                <Entry x:Name="filtro" 
                       Placeholder="Escribe categoría o palabra clave"
                       WidthRequest="250"/>
                <Button Text="Filtrar" Clicked="FiltrarNoticias_Clicked"/>
            </HorizontalStackLayout>

            <VerticalStackLayout>
                <!-- Noticias principales -->
                <Grid ColumnDefinitions="*,*" Padding="10" x:Name="NoticiasPrincipalesGrid" />

                <!-- Scroll horizontal de noticias secundarias -->
                <ScrollView Orientation="Horizontal" Margin="0,10,0,0">
                    <HorizontalStackLayout x:Name="NoticiasSecundariasLayout" Spacing="10" />
                </ScrollView>
            </VerticalStackLayout>

            <ScrollView>
                <FlexLayout Direction="Row"
                Wrap="Wrap"
                JustifyContent="Center"
                AlignItems="Start"
                Padding="10"
                BindableLayout.ItemsSource="{Binding SeccionesNoticias}">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout WidthRequest="400" Spacing="10" Margin="10,10,10,10">
                                <!-- Título de la sección -->
                                <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="18"/>

                                <!-- Noticias de la sección -->
                                <CollectionView ItemsSource="{Binding Noticias}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame Margin="5"
                                       Padding="10"
                                       CornerRadius="12"
                                       HasShadow="True"
                                       BackgroundColor="White">

                                                <HorizontalStackLayout Spacing="10">
                                                    <VerticalStackLayout VerticalOptions="Center" WidthRequest="180">
                                                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14" LineBreakMode="TailTruncation" MaxLines="1"/>
                                                        <Label Text="{Binding Description}" FontSize="12" LineBreakMode="TailTruncation" MaxLines="2"/>
                                                    </VerticalStackLayout>
                                                    <Image Source="{Binding ImageUrl}"
                                                           Aspect="AspectFill"
                                                           HeightRequest="100"
                                                           WidthRequest="100"
                                                           HorizontalOptions="End"
                                                           VerticalOptions="CenterAndExpand"/>
                                                    <ImageButton Source="https://e7.pngegg.com/pngimages/759/433/png-clipart-arrow-button-computer-icons-arrow-angle-logo.png"
                                                                 Aspect="AspectFill"
                                                                 HeightRequest="10"
                                                                 WidthRequest="15"
                                                                 Margin="20,0,0,0"
                                                                 BackgroundColor="Transparent"
                                                                 Clicked="ImageButton_Clicked"
                                                                />
                                                </HorizontalStackLayout>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </ScrollView>

            <FlexLayout Wrap="Wrap"
            AlignItems="Center"
            Padding="10"
            BackgroundColor="LightBlue"
            Direction="Row"
                       >

                <VerticalStackLayout BackgroundColor="Transparent" Margin="0,10,0,0" >

                    <!-- Título pequeño -->
                    <Label Text="Juegos para distraerte un momento"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="#333333"
           HorizontalTextAlignment="Center"
                           Padding="30,0,60,0"/>

                    <!-- Breve descripción -->
                    <Label Text="Diviértete y relájate con juegos rápidos y entretenidos."
           FontSize="14"
           TextColor="#555555"
           HorizontalTextAlignment="Center"
           LineBreakMode="WordWrap"
                           Padding="30,0,60,0"/>

                </VerticalStackLayout>


                <!-- Casilla 1 -->
                <Frame CornerRadius="15"
                       Padding="0"
                       HasShadow="True"
                       BackgroundColor="Transparent"
                       WidthRequest="150"
                       HeightRequest="200"
                       Margin="15,10,5,10"
                       >

                    <Grid>
                        <Image Source="https://play-lh.googleusercontent.com/eX5S3Tv3eSO1aWDMQ7MGRO1AaZM-mF0EvRbNsUM887kJVHj0aKv4GnDNj6ds_qvhpak" Aspect="AspectFill" Opacity="0.7" WidthRequest="180" HeightRequest="200" />
                        <VerticalStackLayout Spacing="5"  HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="BUSCAMINAS" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Button  Text="JUGAR" Clicked="Buscaminas_Clicked"/>

                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <Frame CornerRadius="15" Padding="0" HasShadow="True" BackgroundColor="Transparent" WidthRequest="150" HeightRequest="200" Margin="5,10,5,10"
>
                    <Grid>
                        <Image Source="https://www.google.com/logos/fnbx/more_funbox/solitaire.png" Aspect="AspectFill" Opacity="0.9" WidthRequest="180" HeightRequest="200"/>
                        <VerticalStackLayout Spacing="5"  HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="SOLITARIO" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Button  Text="JUGAR"
                                     Clicked="Solitario_Clicked"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Casilla 3 -->
                <Frame CornerRadius="15" Padding="0" HasShadow="True" BackgroundColor="Transparent" WidthRequest="150" HeightRequest="200" Margin="15,10,5,10">
                    <Grid>
                        <Image Source="https://cdn.pixabay.com/photo/2015/09/17/15/44/game-944386_1280.jpg" Aspect="AspectFill" Opacity="0.8"   WidthRequest="150" HeightRequest="200"/>
                        <VerticalStackLayout Spacing="5"  HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="TA-TE-TI" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Button  Text="JUGAR" Clicked="TaTeTi_Clicked"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Casilla 4 -->
                <Frame CornerRadius="15" Padding="0" HasShadow="True" BackgroundColor="Transparent" WidthRequest="150" HeightRequest="200" Margin="5,10,5,10">
                    <Grid>
                        <Image Source="https://www.snake.es/media/google-snake-juego.png" Aspect="AspectFill" Opacity="0.9" />
                        <VerticalStackLayout Spacing="5"  HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="SNAKE" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Button  Text="JUGAR" Clicked="Snake_Clicked"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </FlexLayout>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

    
